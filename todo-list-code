# Very Easy To-Do List

tasks = []

while True:
    print("\n1. Add Task")
    print("2. View Tasks")
    print("3. Exit")

    ch = input("Enter choice: ")

    if ch == "1":
        t = input("Enter task: ")
        tasks.append(t)
        print("Task added!")

    elif ch == "2":
        print("\nYour Tasks:")
        for i in tasks:
            print("-", i)

    elif ch == "3":
        print("Bye!")
        break

    else:
        print("WrongÂ choice!")
